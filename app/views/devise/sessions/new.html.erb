<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Logging you in...</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input"},
                  wrapper: false,
                  label_html: { class: "label"} 
                %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "input"},
                  wrapper: false,
                  label_html: { class: "label"} 
                %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :remember_me,
                  wrapper: false,
                  input_html: { class: "checkbox mr-1" },
                  as: :boolean if devise_mapping.rememberable?
                %>
              </div>
            </div>
          </div>
          <div class="form-actions mt-2">
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Log in", class: "button is-primary" %>
              </div>
            </div>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
